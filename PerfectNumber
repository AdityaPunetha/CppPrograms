#include<iostream>
using namespace std;
int main()
{
    int i,n,sum=0;
    cout<<"Enter a number: ";
    cin>>n;
    for(i=1;i<=n;i++)
    {
        if(n%i==0)
        {
            sum+=i;
        }
    }
    if(sum==2*n)
    {
        cout<<n<<" is a perfect number"<<endl;
    }
    else
    {
        cout<<n<<" is not a perfect number"<<endl;
    }
    return 0;
}
